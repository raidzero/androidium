<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.D1NoTitleDim" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppDrawerAnimation" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/drawer_fly_in</item>
        <item name="android:activityCloseExitAnimation">@anim/drawer_fly_out</item>
    </style>

    <style name="Theme.AppDrawerTheme" parent="@style/Theme.D1NoTitleDim">
        <item name="android:windowAnimationStyle">@style/AppDrawerAnimation</item>
        <item name="android:background">@color/app_drawer_background</item>
    </style>

</resources>
