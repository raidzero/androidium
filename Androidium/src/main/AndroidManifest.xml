<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.raidzero.androidium"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.READ_SMS"></uses-permission>
    <uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>
    <uses-permission android:name="android.permission.READ_CALL_LOG"></uses-permission>
    <uses-permission android:name="android.permissions.SET_WALLPAPER"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="HomeActivity"
            android:theme="@android:style/Theme.Holo.Wallpaper.NoTitleBar"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:theme="@android:style/Theme.Holo"
            android:name=".SettingsActivity">
        </activity>
        <activity
            android:theme="@android:style/Theme.Holo"
            android:name=".PackageBrowser"
            android:label="Please select a package" >
        </activity>
        <activity
            android:theme="@android:style/Theme.Holo"
            android:name=".ActivityBrowser"
            android:label="Please select an activity" >
        </activity>
        <activity
            android:theme="@android:style/Theme.Holo.Wallpaper.NoTitleBar"
            android:name=".AppDrawer">
        </activity>
    </application>

</manifest>
